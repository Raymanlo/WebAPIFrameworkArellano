<div id="body">


    <button onclick="muestraTODO()">Presiona para hola</button>

    <h1 id="imprimeMensaje"></h1>

    <div id="goAngular">
        <form action="https://angular-rflr3j.stackblitz.io/">
            <input type="submit" value="Go to my Angular site" />
        </form>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
    var Numero = 0;
    $('#goAngular').toggle();
    //vis = false;
    function muestraTODO() {
        //Numero = n;

        $(function () {
            $.getJSON('/api/mensaje', function (messagesJsonPayload) {
                $(messagesJsonPayload).each(function (i, item) {
                    $('#imprimeMensaje').append(item.mensaje);
                });
            });
        });
        if (Numero <= 0) {
            $('#goAngular').toggle();
            Numero++;
        }
    }
    </script>
}